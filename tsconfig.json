{
  "compilerOptions": {
    /* 基础配置 */
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
    ],
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",

    /* 强类型检查配置 */
    "noImplicitAny": false,

    /* 模块分析配置 */
    "baseUrl": ".",
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types/", "./typings/"]
  },
  "include": [
    "src",
    "./typings/"
  ],
  "exclude": ["node_modules", "lib"]
}